<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btn_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="58dp"
        android:layout_marginRight="30dp"
        android:text="คะแนน" />

    <Button
        android:id="@+id/btn_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_score"
        android:text="กติกา" />

    <Button
        android:id="@+id/btn_fruit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_rule"
        android:layout_marginBottom="125dp"
        android:layout_marginRight="38dp"
        android:layout_toLeftOf="@+id/btn_score"
        android:text="ผลไม้" />

    <TextView
        android:id="@+id/txt_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_fruit"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@+id/btn_rule"
        android:text="หมวดหมู่"
        android:textSize="20sp" />

</RelativeLayout>
